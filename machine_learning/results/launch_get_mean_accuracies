#!/usr/bin/env bash

script_path="get_mean_accuracies.py"

model_name="${1:-transformer}"
data_encoding="${2:-bra}"
multirun=${3:-0}

echo "-------------------------------------------"
echo "Executing $script_path script"
echo "model_name $model_name"
echo "data_encoding $data_encoding"
echo "-------------------------------------------"

n_runs=3

if [[ $multirun != 0 ]]; then

  python $script_path \
    model_name="$model_name" \
    data_encoding="$data_encoding" \
    multirun=False \
    n_runs=$n_runs

else

  python $script_path \
    model_name="$model_name" \
    data_encoding="$data_encoding" \
    multirun=True \
    n_runs=$n_runs \

fi

